<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText">

        <Button
                android:onClick="checkSinglePermission"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt_call"
                android:text="checkPermission"/>
        <Button
                android:onClick="requestSinglePermission"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" for one permission"/>

        <Button
                android:onClick="requestPermissions"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" for a series of permissions"/>

        <Button
                android:onClick="requestSinglePermissionWithRationale"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" for one permission with rationale"/>

        <Button
                android:onClick="goApplicationSettings"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="go application settings"/>

        <Button
                android:onClick="checkNotification"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="checkSpecial[NotificationEnable]"/>
        <Button
                android:onClick="checkSystemAlert"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="checkSpecial[SystemAlert]"/>

        <Button
                android:onClick="getTopActivity"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="get top activity"/>

    </LinearLayout>
</ScrollView>